<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UMLEditor.Views.ChangeRelationshipPanel">
    
    <StackPanel
        HorizontalAlignment="Stretch">
        
        <Label
            Margin="0 10 0 5"
            Content = "Enter source class name:">
        </Label>
        
        <TextBox
            Watermark="Source class goes here"
            Name="SourceClass">
        </TextBox>
        
        <Label
            Margin="0 10 0 5"
            Content = "Enter destination class name:">
        </Label>
        
        <TextBox
            Watermark="Destination class goes here"
            Name="DestinationClass">
        </TextBox>
        
        <Label
            Margin="0 10 0 5"
            Content = "Enter new relationship type:">
        </Label>
        
        <ComboBox SelectedIndex="0" Name="TypeSelection" HorizontalAlignment="Stretch" />
        
    </StackPanel>
</UserControl>