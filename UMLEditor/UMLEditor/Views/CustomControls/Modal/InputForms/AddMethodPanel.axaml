<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UMLEditor.Views.CustomControls.Modal.InputForms.AddMethodPanel">
    
    <StackPanel
        HorizontalAlignment="Stretch">
        
        <Label 
            Margin="0 10 0 5 "
            Content="Enter class name:"/>
        
        <TextBox 
            Watermark="Class name goes here" 
            Name="TargetClass"/>
        
        <Label 
            Margin="0 10 0 5 "
            Content="Enter method name:"/>
        
        <TextBox 
            Watermark="Method name goes here" 
            Name="MethodName"/>
        
        <Label 
            Margin="0 10 0 5 "
            Content="Enter return type:"/>
        
        <TextBox 
            Watermark="return type goes here" 
            Name="ReturnType"/>
        
    </StackPanel>
    
</UserControl>
