<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UMLEditor.Views.CustomControls.Modal.InputForms.RenameFieldPanel">
    
    <StackPanel
        HorizontalAlignment="Stretch">
        
        <Label 
            Margin="0 10 0 5 "
            Content="Enter target class:"/>
        
        <TextBox 
            Watermark="Class name goes here" 
            Name="TargetClass"/>
        
        <Label 
            Margin="0 10 0 5 "
            Content="Enter field name you wish to change:"/>
        
        <TextBox 
            Watermark="Old field name goes here" 
            Name="OldName"/>
        
        <Label 
            Margin="0 10 0 5 "
            Content="Enter the new field name:"/>
        
        <TextBox 
            Watermark="New field name goes here" 
            Name="NewName"/>
        
    </StackPanel>
    
</UserControl>
